# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /club                       controllers.Application.addClub()
POST    /blog                       controllers.Application.addBlog()
POST    /city                       controllers.Application.addCity()
POST    /confederation              controllers.Application.addConfederation()
POST    /country                    controllers.Application.addCountry()
POST    /ground                     controllers.Application.addGround()
POST    /league                     controllers.Application.addLeague()
POST    /manager                    controllers.Application.addManager()
POST    /payment                    controllers.Application.addPayment()
POST    /position                   controllers.Application.addPosition()
POST    /subscription               controllers.Application.addSubscription()
POST    /user                       controllers.Application.addUser()
POST    /player                     controllers.Application.addPlayer()

GET     /clubs                      controllers.Application.getClubs()
GET     /blogs                      controllers.Application.getBlogs()
GET     /cities                     controllers.Application.getCities()
GET     /confederations             controllers.Application.getConfederations()
GET     /countries                  controllers.Application.getCountries()
GET     /grounds                    controllers.Application.getGrounds()
GET     /leagues                    controllers.Application.getClubs()
GET     /managers                   controllers.Application.getManagers()
GET     /payments                   controllers.Application.getPayments()
GET     /positions                  controllers.Application.getPositions()
GET     /subscriptions              controllers.Application.getSubscriptions()
GET     /users                      controllers.Application.getUsers()
GET     /players                    controllers.Application.getPlayers()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
