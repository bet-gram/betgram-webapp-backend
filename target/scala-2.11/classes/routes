# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /clubs                      controllers.Application.addClub()
POST    /blogs                      controllers.Application.addBlog()
POST    /cities                     controllers.Application.addCity()
POST    /confederations             controllers.Application.addConfederation()
POST    /countries                  controllers.Application.addCountry()
POST    /grounds                    controllers.Application.addGround()
POST    /leagues                    controllers.Application.addLeague()
POST    /managers                   controllers.Application.addManager()
POST    /payments                   controllers.Application.addPayment()
POST    /positions                  controllers.Application.addPosition()
POST    /subscriptions              controllers.Application.addSubscription()
POST    /users                      controllers.Application.addUser()
POST    /players                    controllers.Application.addPlayer()
POST    /statistics                 controllers.Application.addStatistic()

GET     /clubs                      controllers.Application.getClubs()
GET     /blogs                      controllers.Application.getBlogs()
GET     /cities                     controllers.Application.getCities()
GET     /confederations             controllers.Application.getConfederations()
GET     /countries                  controllers.Application.getCountries()
GET     /grounds                    controllers.Application.getGrounds()
GET     /leagues                    controllers.Application.getClubs()
GET     /managers                   controllers.Application.getManagers()
GET     /payments                   controllers.Application.getPayments()
GET     /positions                  controllers.Application.getPositions()
GET     /subscriptions              controllers.Application.getSubscriptions()
GET     /users                      controllers.Application.getUsers()
GET     /players                    controllers.Application.getPlayers()
GET     /statistics                 controllers.Application.getStatistics()

GET     /clubs/:id                  controllers.Application.getClubId(id: Long)
GET     /blogs/:id                  controllers.Application.getBlogId(id: Long)
GET     /cities/:id                 controllers.Application.getCityId(id: Long)
GET     /confederations/:id         controllers.Application.getConfederationId(id: Long)
GET     /countries/:id              controllers.Application.getCountryId(id: Long)
GET     /grounds/:id                controllers.Application.getGroundId(id: Long)
GET     /leagues/:id                controllers.Application.getClubId(id: Long)
GET     /managers/:id               controllers.Application.getManagerId(id: Long)
GET     /payments/:id               controllers.Application.getPaymentId(id: Long)
GET     /positions/:id              controllers.Application.getPositionId(id: Long)
GET     /subscriptions/:id          controllers.Application.getSubscriptionId(id: Long)
GET     /users/:id                  controllers.Application.getUserId(id: Long)
GET     /players/:id                controllers.Application.getPlayerId(id: Long)
GET     /statistics/:id             controllers.Application.getStatisticId(id: Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
